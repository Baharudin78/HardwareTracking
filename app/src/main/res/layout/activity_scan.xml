<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_primary"
    tools:context=".feature.scan.ScanActivity">

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="Scan"
        android:id="@+id/btnScanBarcode"
        android:backgroundTint="@color/red_primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/tvQrCodeEncrypted"
        app:layout_constraintTop_toBottomOf="@+id/btnScanBarcode"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TRDTSFS"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/tvQrCodeDecrypted"
        app:layout_constraintTop_toBottomOf="@+id/tvQrCodeEncrypted"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TRDTSFS"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/tvNamaBarang"
        app:layout_constraintTop_toBottomOf="@+id/tvQrCodeDecrypted"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TRDTSFS"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/tvResponsibleName"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaBarang"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TRDTSFS"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/tvLocation"
        app:layout_constraintTop_toBottomOf="@+id/tvResponsibleName"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TRDTSFS"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/tvDescLocation"
        app:layout_constraintTop_toBottomOf="@+id/tvLocation"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TRDTSFS"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>